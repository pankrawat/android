<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_4"
    android:id="@+id/mainLayout"
    android:layout_marginTop="@dimen/marginSmall"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_6"
    android:layout_marginLeft="@dimen/dp_6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_bg"


            />
        <ImageView
            android:id="@+id/imgSoldTag"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@mipmap/sold_tag"


            />

        <ImageView
            android:id="@+id/imgSetting"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/marginLess"
            android:layout_marginTop="@dimen/marginVerySamll"
            android:background="#4DFFFFFF"
            android:scaleType="center"
            android:src="@mipmap/setting"
            android:visibility="visible"


            />



<!-- likes layout-->








    </RelativeLayout>


<LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"

android:layout_weight="0.7"
        android:layout_height="wrap_content"
        >

    <TextView android:textSize="@dimen/sp_16"
        android:textColor="@color/lightGreen"
        android:id="@+id/txtProductName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Puma Shoes"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/marginSmall"
        />


    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginSmall"
        >




        <TextView
            android:id="@+id/ru"
            android:textColor="@color/colorPrice"

            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:text="\u20B9"
            />


        <TextView
            android:layout_toRightOf="@+id/ru"
            android:textColor="@color/colorPrice"
            android:id="@+id/txtProductPrice"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:text="1,500"
            />



    </RelativeLayout>


    <TextView
        android:layout_toRightOf="@+id/ru"
        android:textColor="@color/colorLocation"
        android:id="@+id/txtProductPlace"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginSmall"
        android:layout_width="wrap_content"
        android:text="New Delhi"
        android:maxLines="2"
        />
</LinearLayout>

    <RelativeLayout android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.25" android:layout_width="0dp">

    </RelativeLayout>
</LinearLayout>

</LinearLayout>





</RelativeLayout>