<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_4"
    android:layout_marginTop="@dimen/marginSmall"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_6"
    android:layout_marginLeft="@dimen/dp_6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_bg"


            />
  <ImageView
            android:id="@+id/imgSoldTag"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:scaleType="centerInside"
      android:visibility="gone"
            android:src="@mipmap/sold_tag"


            />

<!-- likes layout-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/marginLarge"
            android:background="#B3000000"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_2"



                />

            <TextView
                android:id="@+id/txtFav"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_6"

                android:gravity="center"
                android:text="100"
                android:textColor="@color/white"

     />

        </LinearLayout>







    </RelativeLayout>



    <TextView android:textSize="@dimen/sp_18"
        android:textColor="@color/lightGreen"
        android:id="@+id/txtProductName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Puma Shoes"
        android:layout_marginLeft="@dimen/marginSmall"
        />

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginSmall"
        >




        <TextView
            android:id="@+id/ru"
            android:textColor="@color/colorPrice"

            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:text="@string/rupeeSymbol"
            />


        <TextView
            android:layout_toRightOf="@+id/ru"
            android:textColor="@color/colorPrice"
            android:id="@+id/txtProductPrice"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:text="1,500"
            />




    </RelativeLayout>


    <TextView
        android:layout_toRightOf="@+id/ru"
        android:textColor="@color/colorLocation"
        android:id="@+id/txtProductPlace"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginSmall"
        android:layout_width="wrap_content"
        android:text="New Delhi"
        android:singleLine="true"
        android:maxLines="1"
        />



</LinearLayout>