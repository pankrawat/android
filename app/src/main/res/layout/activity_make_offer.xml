<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:id="@+id/toolbar_back"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary">

       <RelativeLayout
           android:id="@+id/btnBack"
           android:layout_width="50dp"
           android:layout_height="50dp">
        <ImageView


            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@mipmap/back"/>
       </RelativeLayout>
        <TextView

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="@dimen/dp_16"
            android:text="Make an Offer"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="vertical">

        <EditText
            android:id="@+id/offer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Your Offer Price"
            android:singleLine="true"
            android:digits="012345678.9"
            android:maxLength="7"
            android:textColorHint="@color/colorHint"
            android:inputType="number"
            android:textColor="@color/blackColor"
            android:paddingLeft="@dimen/dp_26"
            android:paddingRight="@dimen/dp_26"
            android:paddingTop="@dimen/dp_26"
            android:layout_marginLeft="@dimen/marginLarge"
            android:layout_marginRight="@dimen/marginLarge"
            android:textSize="@dimen/sp_16"/>

        <EditText
            android:id="@+id/message"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="top"
            android:hint="Message"
            android:minLines="5"
            android:maxLines="5"
            android:paddingLeft="@dimen/dp_26"
            android:paddingRight="@dimen/dp_26"
            android:paddingTop="@dimen/dp_26"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/marginLarge"
            android:layout_marginRight="@dimen/marginLarge"
            android:textColorHint="@color/colorHint"
            android:textColor="@color/blackColor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/dp_36"
            android:layout_marginLeft="@dimen/marginLeftXLarge"
            android:layout_marginRight="@dimen/marginLeftXLarge"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/round_corner_border"
            android:gravity="center"
            android:paddingBottom="@dimen/marginSmall"
            android:paddingTop="@dimen/marginSmall"
            android:text="Send"
            android:textColor="@color/white"
            android:textSize="@dimen/txtNormalSize" />

        </LinearLayout>



</LinearLayout>
