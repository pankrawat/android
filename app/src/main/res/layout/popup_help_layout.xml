<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"

  >


    <LinearLayout
        android:id="@+id/childLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginLess"
        android:layout_margin="@dimen/marginSmall"
        android:background="@drawable/round_corner_border_popup"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtQuestion"
            android:textSize="@dimen/txtNormalSize"
            android:textColor="@color/blackColor"
     android:text="Question"
            android:maxLines="2"
            android:layout_margin="@dimen/marginLess"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtAnswer"
            android:textSize="12dp"

            android:textColor="@color/colorHint"
            android:text="Question"

            android:layout_margin="@dimen/marginLess"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
</ScrollView>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgCross"
        android:layout_width="50dp"
        android:layout_height="50dp"

      android:layout_alignParentRight="true"

        android:src="@mipmap/cross_popup"/>

</RelativeLayout>


