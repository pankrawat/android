<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"

        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"

            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_12"
            android:scaleType="center"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:maxLines="1"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:id="@+id/layoutAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/only_bottom_border_black"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:maxLines="1"
                    android:text="About"
                    android:textColor="@color/vk_black"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/only_bottom_border_black"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="0.6"
                    android:maxLines="1"
                    android:text="Contact us &amp; Support"
                    android:textColor="@color/vk_black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/txtContactId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="0.5"
                    android:gravity="right"

                    android:maxLines="1"
                    android:text="ask@baccoon.com"

                    android:textColor="@color/colorHint"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"

                android:background="@drawable/only_bottom_border_black"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"

                    android:maxLines="1"
                    android:text="Address"
                    android:textColor="@color/vk_black"
                    android:textSize="@dimen/sp_16" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"


                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="Goa, 403517, India"

                    android:textColor="@color/colorHint"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/only_bottom_border_black"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    android:text="Support Id"
                    android:textColor="@color/vk_black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/txtSupportId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="0.5"
                    android:gravity="right"

                    android:maxLines="1"
                    android:text="ask@baccoon.com"

                    android:textColor="@color/colorHint"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/only_bottom_border_black"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"

                    android:maxLines="1"
                    android:text="Phone"
                    android:textColor="@color/vk_black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"

                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="18001234567890"

                    android:textColor="@color/colorHint"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/only_bottom_border_black"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    android:text="Fax"
                    android:textColor="@color/vk_black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/txtFax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="0.5"
                    android:gravity="right"

                    android:maxLines="1"
                    android:text="ask@baccoon.com"

                    android:textColor="@color/colorHint"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/only_bottom_border_black"
                android:orientation="vertical"

                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"

                    android:maxLines="1"
                    android:text="Payment"
                    android:textColor="@color/vk_black"
                    android:textSize="@dimen/sp_16" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"


                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnFullPayment"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/marginLess"
                        android:layout_weight="0.33"
                        android:background="@drawable/round_corner_border_orange"


                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"

                        android:text="Full Membership"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <android.support.v4.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnCustomPayment"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/marginLess"

                        android:layout_weight="0.33"


                        android:background="@drawable/round_corner_border_orange"


                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"


                        android:text="Custom Payment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <android.support.v4.widget.Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnPicWisePayment"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/marginLess"
                        android:layout_weight="0.33"
                        android:background="@drawable/round_corner_border_orange"
                        android:paddingLeft="@dimen/dp_8"
                        android:text="Picwise Payment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/share_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"

                    android:background="@drawable/round_corner_border"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/marginSmall"
                    android:paddingTop="@dimen/marginSmall"
                    android:text="Share App"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtNormalSize" />
            </LinearLayout>





        </LinearLayout>


    </ScrollView>

</LinearLayout>