<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_14"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutMessage"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/layoutprofile"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <com.app.baccoon.utils.CircleImageView

                android:id="@+id/imgprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/app_icon" />

            <TextView
                android:id="@+id/txtunreadmsg"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:text="12"
                android:textSize="9sp"
                android:padding="@dimen/dp_4"
                android:background="@drawable/circle_selector"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtmssg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/layoutprofile"
            android:singleLine="true"
            android:text="Ashley Tisdale"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/txtmsg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtmssg2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/layoutprofile"
            android:singleLine="true"
            android:text="Ashley Tisdale"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/txtreply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:singleLine="true"
            android:text="Reply"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/imgmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/txtreply"
            android:src="@mipmap/green_message" />

    </RelativeLayout>

</LinearLayout>
